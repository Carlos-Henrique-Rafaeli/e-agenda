@model ExcluirCategoriaViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Categoria";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Formulário de Exclusão</h3>

                <p>Deseja realmente excluir a categoria "@Model.Titulo"?</p>

                <form asp-action="Excluir" asp-route-id="@Model.Id">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a href="/categorias" class="text-coffee">Voltar para a listagem</a>
                        <button type="submit" class="btn-delete px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>