@model VisualizarContatosViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Contatos";
}

<p>
    <a class="btn btn-primary px-4" href="/contatos/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="card-text"><span class="fw-semibold">Nome:</span> @item.Nome</p>
                    <p class="card-text"><span class="fw-semibold">Email:</span> @item.Email</p>
                    <p class="card-text"><span class="fw-semibold">Telefone:</span> @item.Telefone.</p>
                    <p class="card-text"><span class="fw-semibold">Cargo:</span> @item.Cargo</p>
                    <p class="card-text"><span class="fw-semibold">Empresa:</span> @item.Empresa.</p>

                    <span class="d-flex gap-1 justify-content-end mt-4">
                        <a href="/tarefas/editar/@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/tarefas/excluir/@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>