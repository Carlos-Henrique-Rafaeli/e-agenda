@model VisualizarCompromissoViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Compromissos";
}

<p>
    <a class="btn btn-primary px-4" href="/compromissos/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="card-text"><span class="fw-semibold">Nome:</span> @item.Assunto</p>
                    <p class="card-text"><span class="fw-semibold">Data de ocorrêncincia :</span>@item.DataDeOcorrencia</p>
                    <p class="card-text"><span class="fw-semibold">Hora de ínicio:</span> @item.HoraDeInicio</p>
                    <p class="card-text"><span class="fw-semibold">Hora de término:</span> @item.HoraDeTermino</p>
                    <p class="card-text"><span class="fw-semibold">Tipo de ocorrido:</span> @item.TipoDeCompromisso</p>

                    <span class="d-flex gap-1 justify-content-end mt-4">
                        <a href="/compromissos/editar/@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/compromissos/excluir/@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>